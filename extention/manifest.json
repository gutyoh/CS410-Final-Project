{
    "manifest_version": 3,
    "name": "AI Expander",
    "version": "1.0",
    "description": "Get explanations from large language models",
    "icons": {
        "48": "/resources/icon48.png",
        "128": "/resources/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["contextMenus", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "AI Expander"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}